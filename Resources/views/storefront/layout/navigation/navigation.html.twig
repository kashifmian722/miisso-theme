{% sw_extends '@Storefront/storefront/layout/navigation/navigation.html.twig' %}


{% block layout_main_navigation_menu_home %}

    {% if theme_config('miiso-sticky-navi') %}
        {% if theme_config('miiso-sticky-navigation-logo') %}
            {% sw_include '@Storefront/storefront/layout/navigation/sticky-nav-logo.html.twig' %}
        {% else %}
            {% sw_include '@Storefront/storefront/layout/header/logo.html.twig' %}
        {% endif %}
    {% endif %}

    {% if theme_config('miiso-hide-home-button-in-navi') %}

    {% else %}
        {{ parent() }}
    {% endif %}

{% endblock %}


{% block layout_main_navigation_menu_items %}
    {{ parent() }}
    {% if theme_config('miiso-sticky-navi') %}
        <div class="col-auto miiso-additional-nav-col">
            <div class="header-cart">
                <a class="btn header-cart-btn header-actions-btn"
                   href="{{ path('frontend.checkout.cart.page') }}"
                   title="{{ 'checkout.cartTitle'|trans|striptags }}"
                   aria-label="{{ 'checkout.cartTitle'|trans|striptags }}">
                    {% sw_include '@Storefront/storefront/layout/header/actions/cart-widget.html.twig' %}
                </a>
            </div>
        </div>
    {% endif %}
{% endblock %}